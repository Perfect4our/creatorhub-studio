<div class="auth-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="auth-card">
          <div class="card-header text-center">
            <div class="auth-brand">
              <i class="fas fa-chart-line"></i>
              <span>CreatorHub Studio</span>
            </div>
            <h4 class="mb-0">Welcome Back!</h4>
            <p class="text-muted">Sign in to continue to CreatorHub Studio.</p>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
              <div class="form-floating mb-3">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com", required: true %>
                <%= f.label :email %>
              </div>

              <div class="form-floating mb-3">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: true %>
                <%= f.label :password %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-check mb-3">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              <% end %>

              <div class="d-grid gap-2">
                <%= f.submit "Sign in", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

            <div class="text-center mt-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-4">
          <p class="text-muted">
            Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "fw-medium text-decoration-none" %>
          </p>
          <p class="text-muted">
            <%= link_to "Back to Home", root_path, class: "fw-medium text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
