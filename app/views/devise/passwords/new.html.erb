<div class="auth-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="auth-card">
          <div class="card-header text-center">
            <div class="auth-brand">
              <i class="fab fa-tiktok"></i>
              <span>TikTok Studio</span>
            </div>
            <h4 class="mb-0">Reset Password</h4>
            <p class="text-white-50">Enter your email and we'll send you instructions.</p>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation" }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-floating mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com", required: true %>
                <%= f.label :email %>
              </div>

              <div class="d-grid gap-2">
                <%= f.submit "Send reset instructions", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

            <div class="text-center mt-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-4">
          <p class="text-muted">
            Remember your password? <%= link_to "Sign in", new_session_path(resource_name), class: "fw-medium text-decoration-none" %>
          </p>
          <p class="text-muted">
            <%= link_to "Back to Home", root_path, class: "fw-medium text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
