<%= yield :auth_navbar %>

<div class="auth-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="auth-card">
          <div class="card-header text-center">
            <div class="auth-brand">
              <i class="fas fa-chart-line"></i>
              <span>CreatorHub Studio</span>
            </div>
            <h4 class="mb-0">Create Your Account</h4>
            <p class="text-muted">Get started with CreatorHub Studio today.</p>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-floating mb-3">
                <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Full Name", required: true %>
                <%= f.label :name %>
              </div>

              <div class="form-floating mb-3">
                <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "name@example.com", required: true %>
                <%= f.label :email %>
              </div>

              <div class="form-floating mb-3">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password", required: true %>
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <div class="form-text">
                  <small><%= @minimum_password_length %> characters minimum</small>
                </div>
                <% end %>
              </div>

              <div class="form-floating mb-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password", required: true %>
                <%= f.label :password_confirmation %>
              </div>

              <div class="d-grid gap-2">
                <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

            <div class="text-center mt-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-4">
          <p class="text-muted">
            Already have an account? <%= link_to "Sign in", new_session_path(resource_name), class: "fw-medium text-decoration-none" %>
          </p>
          <p class="text-muted">
            <%= link_to "Back to Home", root_path, class: "fw-medium text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
