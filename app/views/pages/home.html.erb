<%# Homepage for CreatorHub Studio %>
<% content_for :title, "CreatorHub Studio - Multi-Platform Creator Analytics" %>

<!-- Hero Section -->
<section class="hero-section bg-gradient-to-br from-blue-600 to-purple-700 text-white py-20">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-4">
          Your Creator Dashboard<br>
          <span class="text-warning">All Platforms, One View</span>
        </h1>
        <p class="lead mb-4">
          Track, analyze, and grow your content across YouTube, TikTok, Instagram, Twitter, LinkedIn, and Twitch with real-time analytics and powerful insights.
        </p>
        <div class="hero-buttons">
          <% if user_signed_in? %>
            <%= link_to dashboard_path, class: "btn btn-warning btn-lg me-3" do %>
              <i class="fas fa-chart-line me-2"></i>
              Go to Dashboard
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: "btn btn-warning btn-lg me-3" do %>
              <i class="fas fa-rocket me-2"></i>
              Get Started Free
            <% end %>
            <%= link_to new_user_session_path, class: "btn btn-outline-light btn-lg" do %>
              <i class="fas fa-sign-in-alt me-2"></i>
              Sign In
            <% end %>
          <% end %>
        </div>
        <p class="mt-3 text-white-50">
          <small><i class="fas fa-check me-1"></i> Free forever plan available</small>
        </p>
      </div>
      <div class="col-lg-6">
        <div class="hero-image text-center">
          <div class="dashboard-preview bg-white rounded-lg shadow-lg p-4">
            <div class="row g-3">
              <div class="col-6">
                <div class="metric-card bg-danger text-white rounded p-3">
                  <i class="fab fa-youtube fa-2x mb-2"></i>
                  <h4>1.2M</h4>
                  <small>YouTube Views</small>
                </div>
              </div>
              <div class="col-6">
                <div class="metric-card bg-dark text-white rounded p-3">
                  <i class="fab fa-tiktok fa-2x mb-2"></i>
                  <h4>850K</h4>
                  <small>TikTok Views</small>
                </div>
              </div>
              <div class="col-6">
                <div class="metric-card bg-primary text-white rounded p-3">
                  <i class="fab fa-twitter fa-2x mb-2"></i>
                  <h4>45.3K</h4>
                  <small>Twitter Followers</small>
                </div>
              </div>
              <div class="col-6">
                <div class="metric-card bg-info text-white rounded p-3">
                  <i class="fab fa-linkedin fa-2x mb-2"></i>
                  <h4>12.8K</h4>
                  <small>LinkedIn Connections</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Platform Integrations -->
<section class="platforms-section py-16 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center mb-12">
        <h2 class="display-5 fw-bold mb-4">Supported Platforms</h2>
        <p class="lead text-muted">Connect all your social media accounts and get unified analytics</p>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="platform-grid row g-4">
          <div class="col-md-4 col-sm-6">
            <div class="platform-card text-center p-4 bg-white rounded-lg shadow-sm h-100">
              <i class="fab fa-youtube fa-3x text-danger mb-3"></i>
              <h5>YouTube</h5>
              <p class="text-muted">Advanced YouTube Analytics API integration with real-time subscriber counts, video performance, and revenue tracking.</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div class="platform-card text-center p-4 bg-white rounded-lg shadow-sm h-100">
              <i class="fab fa-tiktok fa-3x text-dark mb-3"></i>
              <h5>TikTok</h5>
              <p class="text-muted">Track viral videos, engagement rates, and follower growth with TikTok's creator tools integration.</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div class="platform-card text-center p-4 bg-white rounded-lg shadow-sm h-100">
              <i class="fab fa-instagram fa-3x text-info mb-3"></i>
              <h5>Instagram</h5>
              <p class="text-muted">Monitor posts, stories, and reels performance with detailed audience insights and engagement metrics.</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div class="platform-card text-center p-4 bg-white rounded-lg shadow-sm h-100">
              <i class="fab fa-twitter fa-3x text-primary mb-3"></i>
              <h5>Twitter</h5>
              <p class="text-muted">Analyze tweet performance, follower growth, and engagement trends across your Twitter presence.</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div class="platform-card text-center p-4 bg-white rounded-lg shadow-sm h-100">
              <i class="fab fa-linkedin fa-3x text-primary mb-3"></i>
              <h5>LinkedIn</h5>
              <p class="text-muted">Professional network insights including post reach, connection growth, and industry engagement.</p>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div class="platform-card text-center p-4 bg-white rounded-lg shadow-sm h-100">
              <i class="fab fa-twitch fa-3x text-purple mb-3"></i>
              <h5>Twitch</h5>
              <p class="text-muted">Stream analytics, viewer engagement, subscriber tracking, and chat analysis for live content.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section py-16">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center mb-12">
        <h2 class="display-5 fw-bold mb-4">Powerful Features</h2>
